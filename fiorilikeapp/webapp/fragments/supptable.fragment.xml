<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
            <Table items="{
                    path: '/To_Orders'
                }" id="idTbl">
                <headerToolbar>
                    <Toolbar >
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button icon="sap-icon://filter" press="onFilter"></Button>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Sales Order ID" />
                    </Column>
                    <Column>
                        <Text text="Buyer Name" />
                    </Column>
                    <Column  minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Gross Amount" />
                    </Column>
                    <Column minScreenWidth="Tablet">
                        <Text text="Lifecycle Status" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem >
                        <Text text="{SO_ID}"></Text>
                        <Input value="{BUYER_NAME}" showValueHelp="true" valueHelpRequest="onF4Help"></Input>
                        <Text text="{GROSS_AMOUNT}"></Text>
                        <Link text="{LIFECYCLE_STATUS}"></Link>
                    </ColumnListItem>
                </items>
            </Table>
</core:FragmentDefinition>