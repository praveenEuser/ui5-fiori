<mvc:View controllerName= "sasu.controller.Add" 
          xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

    <Page >
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Add Product"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Product ID" />
				<Input id="name" submit="onEnter"  value="{viewModel>/productData/PRODUCT_ID}" placeholder="Enter Product ID" />
				<Button text="Load Most Expensive" press="onload" icon="sap-icon://monitor-payments" ></Button>
				<Button text="Load Most Cheapest" press="onloadCheap" icon="sap-icon://monitor-payments" ></Button>
				<Label text="Name" />
				<Input value="{viewModel>/productData/NAME}" placeholder="Enter Product Name">
				</Input>
				<Input placeholder="Enter product Descirption" value="{viewModel>/productData/DESCRIPTION}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="Supplier ID" />
				<Input value="{viewModel>/productData/SUPPLIER_ID}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="Price/Currency" />
                <Input type="Number" value="{viewModel>/productData/PRICE}"></Input>
                <Input value="{viewModel>/productData/CURRENCY_CODE}"></Input>
				
			</f:content>
		</f:SimpleForm>

		<Table items="{
                    path: 'viewModel>/productData/To_Orders'
                }" id="idTbl1" growing="true" growingThreshold="10">
                <headerToolbar>
                    <Toolbar >
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button icon="sap-icon://filter" press="onFilter"></Button>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Sales Order ID" />
                    </Column>
                    <Column>
                        <Text text="Buyer Name" />
                    </Column>
                    <Column  minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Gross Amount" />
                    </Column>
                    <Column minScreenWidth="Tablet">
                        <Text text="Lifecycle Status" />
                    </Column>
					<Column minScreenWidth="Tablet">
                        <Text text="Created At" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem >
                        <Text text="{viewModel>SO_ID}"></Text>
                        <Text text="{viewModel>BUYER_NAME}"></Text>
                        <Text text="{viewModel>GROSS_AMOUNT}"></Text>
                        <Link text="{viewModel>LIFECYCLE_STATUS}"></Link>
						<Text text="{
							path:'viewModel>CREATED_AT',
							formatter:'.formatter.datefot'
						}"></Text>
                    </ColumnListItem>
                </items>
            </Table>

	</VBox>

    <footer>
        <Toolbar >
            <ToolbarSpacer ></ToolbarSpacer>

            <Button press="onSave" text="Save" icon="sap-icon://save"></Button>
			<Button text="Clear All" press="onClear" icon="sap-icon://clear-all"></Button>
			<Button text="Update" press="onUpdate" icon="sap-icon://collapse-group"></Button>
			<Button text="Delete" press="onDelete" icon="sap-icon://delete"></Button>
        </Toolbar>
    </footer>
    
    </Page>
    

</mvc:View>