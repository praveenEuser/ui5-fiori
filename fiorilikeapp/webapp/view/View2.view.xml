<mvc:View controllerName= "sasu.controller.View2" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns:f="sap.ui.layout.form"
          xmlns:core="sap.ui.core" 
          xmlns="sap.m">

    <Page title="Information" showNavButton="true" navButtonPress="onBack">
        <content>
            <ObjectHeader intro="{DESCRIPTION}" title="{PRODUCT_ID}" icon="sap-icon://product"
            number="{PRICE}" numberUnit="{CURRENCY_CODE}"></ObjectHeader>

            <IconTabBar >
                <items>
                    <IconTabFilter  icon="sap-icon://warning" text="More Info">
                        <core:Fragment fragmentName="sasu.fragments.moreInfo" type="XML"/>
                        <core:Fragment fragmentName="sasu.fragments.supplierInfo" type="XML"/>
                    </IconTabFilter>
                    <IconTabFilter iconColor="Positive" icon="sap-icon://supplier" text="Orders">
                        <core:Fragment fragmentName="sasu.fragments.supptable" type="XML" />
                    </IconTabFilter>
                    
                    <IconTabFilter iconColor="Negative" icon="sap-icon://home" text="Cities">
                        <core:Fragment fragmentName="sasu.fragments.drop" type="XML" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer/>
                <Button text="Order" press="onOrder" type="Accept"></Button>
                <Button text="Cancel" press="onCancel" type="Reject"></Button>
            </Toolbar>
        </footer>
    </Page>
    

</mvc:View>